- if user_signed_in?
  %li.col-md-2= link_to 'Logout', destroy_user_session_path, :method=>'delete'
- else
  %li.col-md-2= link_to 'Login', new_user_session_path
- if user_signed_in?
  %li.col-md-2= link_to 'Account', edit_user_registration_path
  - if current_user.has_role? :admin
    %li.col-md-2= link_to 'Admin', users_path
- else
  %li.col-md-3= link_to 'Sign up', new_user_registration_path
  %li.col-md-2= link_to "Twitter", user_omniauth_authorize_path(:twitter)
  %li.col-md-2= link_to "Facebook", user_omniauth_authorize_path(:facebook)
  %li.col-md-2= link_to "Google", user_omniauth_authorize_path(:google_oauth2)
  %li.col-md-1= link_to "Steam", user_omniauth_authorize_path(:steam)